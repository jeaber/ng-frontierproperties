@import jeet
ul
	margin 0
#plans
	background-color: transparent
	padding-top 1em
.plans
	h2
		margin-bottom 0
	+below(3)
		min-height: 22em
.plan
	col(1/2)
	.list
		col(3/4)
		clear both
	.info
		div
			col(3/4)
		h3
			margin 0
		.info-text
			col(2/3)
			span
				font-size .9em
				color dimgrey
		.image
			col(1/3)
			overflow visible
			float right !important
	img
		col(1)
		margin auto
		display block
		max-width 6em
		background-color white
		border .2em ridge darkgreen
		border-radius: 3px
		padding .2em
		transition: all 1s ease
	img:hover
		cursor: pointer
	img.active
		position: absolute
		margin auto
		left 0
		right 0
		-ms-transform: scale(3); /* IE 9 */
		-webkit-transform: scale(3); /* Safari */
		transform: scale(3);
	+below(2)
		col(1)
		margin-bottom 1em